<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="500px"
        android:maxHeight="500px"
        android:scaleType="centerInside"
        android:src="@drawable/rbpng"

        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="65dp"
        android:backgroundTint="#7ed957"
        android:focusable="true"
        android:hint="Mobile Number"
        android:textColor="#7ed957"
        android:textColorHighlight="#7ed957"
        android:textColorHint="#7ed957"
        android:textColorLink="#7ed957" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginRight="-10dp"
        android:backgroundTint="#7ed757"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#7ed957"
        android:textColorHighlight="#7ed957"
        android:textColorHint="#7ed957"
        android:textColorLink="#7ed957" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="480dp"
        android:id="@+id/button1"
        android:background="black"
        android:capitalize="none"
        android:text="Forgot Password?"
        android:textColor="#7ed957"
        android:textColorHighlight="#7ed957"
        android:textColorHint="#7ed957"
        android:textColorLink="#7ed957" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/roundbutton"
        android:ellipsize="none"
        android:text="Login"
        android:textColor="#000000"
        android:textColorHighlight="#7ed957"
        android:textColorHint="#7ed957"
        android:textColorLink="#7ed957" />



</RelativeLayout>